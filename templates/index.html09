<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>TanujaChennaPragada AI Chat Bot</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Poppins font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-start: #ffd1dc;
            --bg-end:   #d0f4de;
            --card:     #ffffff;
            --border:   linear-gradient(45deg, #ff6b6b, #ffb86c, #a0e7e5, #6bcf7f);
            --user-start: #ff9a9e;
            --user-end:   #fad0c4;
            --bot-start:  #a1c4fd;
            --bot-end:    #c2e9fb;
            --accent:     #ff6b6b;
            --text:       #2d3436;
            --placeholder:#b2bec3;
        }
        *{margin:0;padding:0;box-sizing:border-box;}
        body{
            font-family:'Poppins',sans-serif;
            background:linear-gradient(135deg,var(--bg-start),var(--bg-end));
            color:var(--text);
            min-height:100vh;
            display:flex;
            align-items:center;
            justify-content:center;
            padding:1rem;
        }
        #chat-container{
            width:100%;
            max-width:480px;
            background:var(--card);
            border-radius:1.8rem;
            padding:1.6rem;
            box-shadow:0 12px 40px rgba(0,0,0,.12);
            position:relative;
            overflow:hidden;
            border:4px solid transparent;
            background-clip:padding-box;
        }
        #chat-container::before{
            content:"";
            position:absolute;
            inset:-4px;
            background:var(--border);
            border-radius:1.8rem;
            z-index:-1;
        }
        h2{
            text-align:center;
            font-weight:700;
            font-size:1.9rem;
            background:linear-gradient(90deg,#ff6b6b,#6bcf7f);
            -webkit-background-clip:text;
            background-clip:text;
            color:transparent;
            margin-bottom:1rem;
        }
        #chat-box{
            flex:1;
            max-height:420px;
            overflow-y:auto;
            padding:0.8rem;
            display:flex;
            flex-direction:column;
            gap:.6rem;
            scrollbar-width:thin;
            scrollbar-color:var(--accent) #f1f2f6;
        }
        .message{
            max-width:78%;
            padding:.7rem 1.1rem;
            border-radius:1.4rem;
            position:relative;
            animation:bounceIn .35s ease-out;
            line-height:1.5;
            font-size:.96rem;
            box-shadow:0 2px 8px rgba(0,0,0,.08);
        }
        .user{
            align-self:flex-end;
            background:linear-gradient(135deg,var(--user-start),var(--user-end));
            color:#fff;
            border-bottom-right-radius:.4rem;
        }
        .bot{
            align-self:flex-start;
            background:linear-gradient(135deg,var(--bot-start),var(--bot-end));
            color:#2d3436;
            border-bottom-left-radius:.4rem;
        }
        .loading{
            align-self:center;
            background:none;
            color:var(--accent);
            font-style:italic;
            animation:pulse 1.4s infinite;
        }
        .input-container{
            display:flex;
            align-items:center;
            background:#f8f9fa;
            border-radius:2rem;
            padding:0 .6rem;
            border:2px solid transparent;
            transition:border .3s;
        }
        .input-container:focus-within{
            border-image:var(--border) 1;
        }
        #user-input{
            flex:1;
            background:transparent;
            border:none;
            outline:none;
            padding:.9rem 1rem;
            font-size:1rem;
            color:var(--text);
        }
        #user-input::placeholder{color:var(--placeholder);}
        #send-button{
            background:linear-gradient(45deg,#ff6b6b,#ffb86c,#a0e7e5,#6bcf7f);
            background-size:300%;
            color:#fff;
            border:none;
            width:46px;height:46px;
            border-radius:50%;
            cursor:pointer;
            display:flex;
            align-items:center;
            justify-content:center;
            transition:transform .2s,background .4s;
            animation:pulseBtn 2s infinite;
        }
        #send-button:disabled{
            background:#b2bec3;
            cursor:not-allowed;
            animation:none;
        }
        #send-button:hover:not(:disabled){
            transform:scale(1.15);
            background-position:100% 0;
        }
        #send-button svg{width:22px;height:22px;}

        @keyframes bounceIn{
            0%{opacity:0;transform:scale(.6) translateY(10px);}
            60%{transform:scale(1.05);}
            100%{opacity:1;transform:scale(1);}
        }
        @keyframes pulse{
            0%,100%{opacity:.5;}
            50%{opacity:1;}
        }
        @keyframes pulseBtn{
            0%,100%{background-position:0% 50%;}
            50%{background-position:100% 50%;}
        }

        /* scroll bar */
        #chat-box::-webkit-scrollbar{width:7px;}
        #chat-box::-webkit-scrollbar-track{background:#f1f2f6;border-radius:4px;}
        #chat-box::-webkit-scrollbar-thumb{
            background:var(--accent);
            border-radius:4px;
        }
    </style>
</head>
<body>
<div id="chat-container">
    <h2>TanujaChennaPragada AI Chat Bot</h2>
    <div id="chat-box"></div>
    <div class="input-container">
        <input type="text" id="user-input" placeholder="Ask me anything…">
        <button id="send-button" onclick="sendMessage()">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
        </button>
    </div>
</div>

<script>
    async function sendMessage() {
        const input = document.getElementById('user-input');
        const btn   = document.getElementById('send-button');
        const msg   = input.value.trim();
        if (!msg) return;

        btn.disabled = true;
        appendMessage(msg, 'user');
        appendMessage('Typing…', 'loading');
        input.value = '';

        try {
            const API_URL = "http://3.110.83.49:8080/chat";
            const resp = await fetch(API_URL, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ message: msg })
            });
            removeLoading();

            if (!resp.ok) throw new Error(`HTTP ${resp.status}`);

            const data = await resp.json();
            appendMessage(data.error ? `Warning: ${data.error}` : data.response, 'bot');
        } catch (e) {
            removeLoading();
            appendMessage(`Warning: ${e.message}`, 'bot');
        } finally {
            btn.disabled = false;
        }
    }

    function appendMessage(text, type) {
        const box = document.getElementById('chat-box');
        const div = document.createElement('div');
        div.className = `message ${type}`;
        div.textContent = text;
        box.appendChild(div);
        box.scrollTop = box.scrollHeight;
    }
    function removeLoading() {
        const el = document.querySelector('.loading');
        if (el) el.remove();
    }

    // Enter key
    document.getElementById('user-input').addEventListener('keydown', e => {
        if (e.key === 'Enter') sendMessage();
    });
</script>
</body>
</html>
